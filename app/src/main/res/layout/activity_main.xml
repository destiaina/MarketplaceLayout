<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="365dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayout">

        <ImageView
            android:id="@+id/rectangle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/red_rectangle" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="363dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="367dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/welcome_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:text="Welcome back"
            android:textColor="#000000"
            android:textSize="38sp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="45dp"/>

        <TextView
            android:id="@+id/largest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="0dp"
            android:textColor="#000000"
            android:fontFamily="@font/futura_pt_demibold"
            android:text="at largest Servies marketplace"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/enter_as_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/futura_pt_demibold"
            android:text="Enter as a"
            android:textSize="19sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_red_large"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:text="User" />

        <Button
            android:id="@+id/button2"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:textColor="#FF0000"
            android:background="@drawable/btn_white_large"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:text="service provider"/>

        <TextView
            android:id="@+id/enter_as_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="145dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/futura_pt_demibold"
            android:text="Enter as a guest"
            android:textSize="15sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>